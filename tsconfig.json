{
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"alwaysStrict": true,
		"charset": "utf8",
		"declaration": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"lib": [
			"es2018"
		],
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
//		"noUnusedLocals": true,
//		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"stripInternal": true,
		"target": "ES2018",
		"incremental": true,
		"types": [ "node" ],
		"outDir": ".build/cdktf",
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"paths": {
			"lib/*":      [ "lib/*" ],
			"provider/*": [ "../.build/cdktf/providers/*" ],
			"stack/*":    [ "../.build/cdktf/stacks/*" ]
		},
		"allowSyntheticDefaultImports": true
	}
}
